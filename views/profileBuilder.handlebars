<body>
    <header>
        <div class="pos-f-t">
            <div class="collapse" id="navbarToggleExternalContent">
                <div class="bg-dark p-4">
                    <h5 class="text-white h4">Collapsed content</h5>
                    <span class="text-muted">Toggleable via the navbar brand.</span>
                </div>
            </div>
            <nav class="navbar navbar-dark bg-dark">
                <div id="titlebar">
                    <h1>Dating App</h1>
                </div>
            </nav>
        </div>
    </header>

    <div id="profile-builder">
        <h3>Build Your Profile</h3>
        <form>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="input" class="form-control" id="user-name" aria-describedby="emailHelp"
                    placeholder="Enter Your Name" />
            </div>
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="input" class="form-control" id="user-age" placeholder="Enter Your Age" />
            </div>

            <div class="form-group">
                <label for="region">Region:</label>
                <input type="input" class="form-control" id="user-region" placeholder="Enter Your Region" />
            </div>

            <div class="form-group">
                <label for="bio">Bio:</label>
                <textarea type="text-box" class="form-control" id="user-bio"
                    placeholder="Write a brief bio about yourself" rows="5"></textarea>
            </div>

            <div class="form-group">
                <label for="interests">Interests:</label>
                <textarea type="text-box" class="form-control" id="user-interests"
                    placeholder="Write about some of your interests and hobbies" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label for="bio">Horoscope:</label>
                <textarea type="text-box" class="form-control" id="user-horoscope"
                    placeholder="Write about your Horoscope sign" rows="5"></textarea>
            </div>

            <button type="button" onclick="window.location.href = 'locations.html';" class="btn btn-primary">
                Submit
            </button>
        </form>
    </div>
    <script>
        var name = $("#user-name").val();
            var age = $("#user-age").val();
            var region = $("#user-region").val();
            var bio= $("#user-bio").val();
            var interests= $("#user-interests").val();
            var horoscope =$("#user-horoscope").val();
        
        $("<button>").on("click", function(event){
        
                event.preventDefault();
               $.ajax({
        type: "POST",
        url: "http://localhost:3000/profileBuilder",
        data: {  name = $("#user-name").val();
             age = $("#user-age").val();
             region = $("#user-region").val();
             bio= $("#user-bio").val();
               interests= $("#user-interests").val();
             horoscope =$("#user-horoscope").val(); },
        success: function(result)
        {
            $("#profile-builder").html(result);
        }
    });
    
            
            
        });


      
    </script>
</body>